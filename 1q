# CircleCI configuration file
version: 2.1

jobs:
  build_and_test:
    docker:
      - image: python:3.9-alpine
    steps:
      - checkout
      - run: 
          name: Install dependencies 
          command: | 
            pip install black
            black --check ./**/*.py
      - run: 
          name: Run docker-compose
          command: |
            apk add --no-cache docker-compose
            docker-compose -f compose.local.yml config
      - run: 
          name: Docker build
          command: |
            docker build --target python -f Dockerfile -t swiss-army-knife

workflows:
  on_commit:
    jobs:
      - build_and_test
